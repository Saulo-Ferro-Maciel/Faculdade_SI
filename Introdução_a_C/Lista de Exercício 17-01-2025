#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

void quinta_questao(){
    printf("\033[H\033[J");

    int resposta, cont;
    printf("Quantas temperaturas a serem convertidas de Cº para Fº?\nRespostas= ");scanf("%d",&resposta);
    
    float f[resposta], temp, celsius;
    for(cont=0;cont <= (resposta-1); cont++){
        printf("Digite a %dª temperatura Fº: ",cont+1);scanf("%f",&temp);
        f[cont]=temp;
    }
    
    for(cont=0;cont <= (resposta-1); cont++){
        celsius = f[cont];
        celsius = (celsius-32)*5/9;
        printf("A temperatura de %.2fCº é igual a %.2fFº.\n",f[cont],celsius);
    }

    return 0;
}

void quarta_questao() {
    printf("\033[H\033[J");

    int resposta, cont, resposta2, posicao, posicao2;

    printf("Quantos elementos o vetor terá?\nResposta= ");
    scanf("%d", &resposta);

    int v[resposta];

    // Preenchendo o vetor com os elementos fornecidos pelo usuário
    for(cont = 0; cont < resposta; cont++) {
        printf("Adicione o %dº elemento:\nResposta= ", cont + 1);
        scanf("%d", &resposta2);
        v[cont] = resposta2;
    }

    // Comparando os elementos consecutivos
    for(cont = 0; cont < resposta - 1; cont++) {
        posicao = v[cont];
        posicao2 = v[cont + 1];

        if(posicao == posicao2) {
            printf("O número %d e o %d são iguais\n", posicao, posicao2);
        }
    }

    return 0;
}

void terceira_questao() {
    printf("\033[H\033[J");

    int cont, resposta2;
    int v[10];

    // Preenchendo o vetor com 10 números
    for(cont = 0; cont < 10; cont++) {
        printf("Adicione o %dº elemento:\nResposta= ", cont + 1);
        scanf("%d", &resposta2);
        v[cont] = resposta2;  // Armazena o número no vetor
    }

    // Imprimindo os valores armazenados no vetor
    printf("Os elementos digitados foram:\n");
    for(cont = 0; cont < 10; cont++) {
        printf("%d\n", v[cont]);  // Imprime o valor armazenado no índice cont
    }
}
void segunda_questao() {
    printf("\033[H\033[J");

    int resposta,cont,resposta2,e;

    printf("Quantos elemento o vetor terá?\nResposta= ");scanf("%d",&resposta);
    int v[resposta];

    for(cont=0; cont <= (resposta - 1); cont++) {
        printf("Adicione o %d elemento?\nResposta= ",cont+1);scanf("%d",&resposta2);
        v[cont]=resposta2;
    }
    for(cont=resposta-1; cont >= 0; cont--) {
        e=v[cont];
        printf("%d\n",e);
    }
    return 0;
}

void primeira_questao(){
    int v[]={10, 20, 30, 40, 50},cont, e;
    for(cont=0; cont <= 5 - 1; cont++) {
        e=v[cont];
        printf("%d\n",e);
    }
}

int main() {
    setlocale(LC_ALL, "Portuguese");

    printf("\nPrimeira Questão e sua Resolução:\n");
    primeira_questao();

    printf("\n\nSegunda Questão e sua Resolução:\n");
    segunda_questao();

    printf("\n\nTerceira Questão e sua Resolução:\n");
    terceira_questao();

    printf("\n\nQuarta Questão e sua Resolução:\n");
    quarta_questao();

    return 0;
}
