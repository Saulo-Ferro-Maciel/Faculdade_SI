programa
{
	inclua biblioteca Matematica --> mtm
	
	funcao inicio()
	{
		inteiro num, result, temperatura, cigarros, anos
		real valorCompra, valorVenda, peso, altura, imc, pesoIdeal, resultado, num2
		caracter sexo

	  // Primeira Questão
		escreva("Primeira Questão \nDigite um número: ")leia(num)
		result = num %2
		se (result  == 0) {escreva("par\n") } senao { escreva("Impar\n")}

    // Segunda Questão
    escreva("\nSegunda Questão \nDigite um número: ")leia(num2)
    se (0 <= num2){ resultado = num2 * 2 } senao { resultado = num2 * 3 }
    escreva("O resultado é: ", resultado, "\n")

    // Terceira Questão
    escreva("\nTerceira Questão \nDigite o valor do produto: R$ ")leia(valorCompra)
    se (valorCompra < 20.0) { valorVenda = valorCompra + (valorCompra * 0.45)}
    senao { valorVenda = valorCompra + (valorCompra * 0.30)}
    escreva("O valor de venda do produto será: R$ ", mtm.arredondar(valorVenda,2)," \n")

    // Quarta Questão         
    escreva("\nQuarta Questão \nDigite a temperatura atual: ")leia(temperatura)
    se (temperatura <= 15){escreva("Resultado: Muito frio\n")}
    senao se (temperatura >= 16 e temperatura <= 23){escreva("Resultado: Frio\n")}
    senao se (temperatura >= 24 e temperatura <= 26){escreva("Resultado: Agradável\n")}
    senao se (temperatura >= 27 e temperatura <= 30){escreva("Resultado: Calor\n")}
    senao se (temperatura > 30){ escreva("Resultado: Muito quente\n")}

    // Quinta Questão
    escreva("\nQuinta Questão\nDigite a altura em metros: ")leia(altura)
    escreva("Digite o sexo (M para masculino, F para feminino): ")leia(sexo)
    se (sexo == 'M' ou sexo == 'm'){
    pesoIdeal = (72.7 * altura) - 58 
    escreva("Peso ideal para homem: ", mtm.arredondar(pesoIdeal,2), "\n")
    }
    senao se (sexo == 'F' ou sexo == 'f'){
    pesoIdeal = (62.1 * altura) - 44.7
    escreva("Peso ideal para mulher: ", mtm.arredondar(pesoIdeal,2), "\n")
    }
    senao {escreva("Sexo inválido. Por favor, insira M ou F.\n")}

    // Sexta Questão
    escreva("\nSexta Questão\nDigite o peso em kg: ")leia(peso)
    escreva("Digite a altura em metros: ")leia(altura)
    imc = peso / (altura * altura)
    escreva("Seu IMC é: ", mtm.arredondar(imc,2), "\n")
    se (imc < 18.5){escreva("Condição: Abaixo do peso")}
    senao se (imc >= 18.5 e imc <= 24.9){escreva("Condição: Peso normal")}
    senao se (imc >= 25 e imc <= 29.9){escreva("Condição: Sobrepeso")}
    senao se (imc >= 30 e imc <= 34.9){escreva("Condição: Obesidade grau I")}
    senao se (imc >= 35 e imc <= 39.9){escreva("Condição: Obesidade grau II")}
    senao {escreva("Condição: Obesidade grau III")}

    // Sétima Questão
    escreva("\n\nSétima Questão \nQuantos cigarros você fuma por dia?\nSua resposta: ")leia(cigarros)
    se (cigarros > 0) {
    escreva("Quantos anos você fuma?\nSua resposta: ")leia(anos)
    se (anos > 0) {
      cigarros = cigarros * anos * 365
      cigarros = cigarros * 7
      cigarros = cigarros / (24 * 60)
      escreva("O total de dias de vida perdidos é: ", mtm.arredondar(cigarros, 2),"\n")
    }
    senao {
      cigarros = cigarros * 7
      escreva("O total de minutos de vida perdidos é: ", mtm.arredondar(cigarros, 2),"\n")	
    }
    }
    senao {escreva("Parabéns, você tem uma vida saudavél\n")}

	}
}
